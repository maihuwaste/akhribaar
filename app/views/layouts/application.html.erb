<!DOCTYPE html>
<html>
<head>
  <title>Overflow</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if notice %>
 <script type="text/javascript">
 	noty({text: '<%= notice %>', type: 'alert'});
 </script>
 
 <% end %>
 
 
 <% if alert %>
 
 <script type="text/javascript">
 	noty({text: '<%= alert %>', type: 'error'});
 </script>
 <% end %>
 <% if user_signed_in? %>
 <header>




<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <%=link_to image_tag("logo_f.jpeg"),root_path,:id =>"logo"%>
    </div>
    <ul class="nav navbar-nav">

      <li class="active"><a href="#">QnA</a></li>
      <li><a href="#">Page 1</a></li>
      <li><a href="#">Page 2</a></li>

		<li><%= link_to "User",users_path,method: :get %></li>
		<li><%= link_to "Tags",tags_path,method: :get %></li>
		<li><%= link_to "Sign Out",destroy_user_session_path,method: :delete %></li>
    	</ul>

    <form class="navbar-form navbar-left">
      <div class="form-group">
        <input type="text" class="form-control" placeholder="Ask Question">
      </div>
      <button type="submit" class="btn btn-default">Submit</button>
    </form>
  </div>


</header>	

<%end%> 

<%= yield %>

</body>
</html>
